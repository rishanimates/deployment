{
  "services": {
    "auth-service": {
              "repository": "rishanimates/auth-service",
      "default_branch": "develop",
      "port": 3000,
      "health_endpoint": "/health",
      "description": "Authentication and authorization service"
    },
    "user-service": {
              "repository": "rishanimates/user-service",
      "default_branch": "develop",
      "port": 3001,
      "health_endpoint": "/health",
      "description": "User management and profiles service"
    },
    "chat-service": {
              "repository": "rishanimates/chat-service",
      "default_branch": "develop",
      "port": 3002,
      "health_endpoint": "/health",
      "description": "Real-time messaging service"
    },
    "event-service": {
              "repository": "rishanimates/event-service",
      "default_branch": "develop",
      "port": 3003,
      "health_endpoint": "/health",
      "description": "Event management and ticketing service"
    },
    "shared-service": {
              "repository": "rishanimates/shared-service",
      "default_branch": "develop",
      "port": 3004,
      "health_endpoint": "/health",
      "description": "Shared utilities (storage, payments, notifications)"
    },
    "splitz-service": {
              "repository": "rishanimates/splitz-service",
      "default_branch": "develop",
      "port": 3005,
      "health_endpoint": "/health",
      "description": "Expense splitting and management service"
    }
  },
  "deployment": {
    "staging": {
      "host": "103.168.19.241",
      "port": 7576,
      "user": "root",
      "deploy_path": "/opt/letzgo"
    },
    "production": {
      "host": "your-production-server.com",
      "port": 22,
      "user": "deploy",
      "deploy_path": "/opt/letzgo"
    }
  },
  "docker": {
    "network": "letzgo-network",
    "base_image": "node:18-alpine",
    "restart_policy": "unless-stopped"
  }
}
